const defaultState = {
  authenticated: false
};

//Create an authReducer function that contains a switch statement about Action types

const authReducer = (state = defaultState, action) => {
switch(action.type) {
  case 'LOGIN':
  return {authenticated: true};
  break;
  case 'LOGOUT':
  return {authenticated: false};
  break;
  default:
  return defaultState;
}
};

//Create a store using the authReducer function as an argument
const store = Redux.createStore(authReducer);

//Create a login user function
const loginUser = () => {
  return {
    type: 'LOGIN'
  }
};

//Create a logout user function
const logoutUser = () => {
  return {
    type: 'LOGOUT'
  }
};
